<!DOCTYPE html>
<html lang="pt">
<%- include('../partials/head'); %>
<body class="wrapper">
    <%- include('../partials/nav'); %>
    <div class="content-layout">
        <%- include('../partials/header'); %>
        <table class="standard-table">
            <tr>
                <th>ID</th>
                <th>Nome do usuário</th>
                <th>Administrador</th>
                <th>Data de criação</th>
                <th>Último login</th>
                <th width="50"> </th>
            </tr>
            <% users.forEach(user => { %>
            <tr>
                <td>
                    <%= ("000" + user.id).substr(user.id.length-4) %>
                </td>
                <td><%= user.nome %></td>
                <td><% if (user.administrador) { %>
                    Sim
                    <% } else { %>
                    Não
                    <% }; %></td>
                <td><%= user.data_criacao != null ? user.data_criacao
                                                        .toISOString()
                                                        .replace(/T/, ' ')
                                                        .replace(/\..+/, '') 
                                                        : "N/A" %>
                </td>
                <td><%= user.ultimo_login != null ? user.ultimo_login
                                                        .toISOString()
                                                        .replace(/T/, ' ')
                                                        .replace(/\..+/, '') 
                                                        : "N/A" %>
                </td>
                <td>
                    <div class="table-button-container">
                        <a href="/edit/user?id=<%= user.id %>">
                            <button class="table-button button-green">✎</button>
                        </a>
                        
                            <button class="table-button button-red" data-remove-user-id="<%= user.id %>">✗</button>
                        
                    </div>
                </td>
            </tr>
            <% }); %>
        </table>
        <button id="testModal">me clica</button>
    </div>
</body>

</html>